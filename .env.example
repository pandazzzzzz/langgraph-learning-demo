# API Keys - 请复制此文件为 .env 并填入你的实际API密钥
# Copy this file to .env and fill in your actual API keys

# OpenAI API Key (必需 - Required)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (可选 - Optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LangSmith API Key (可选，用于监控和调试 - Optional, for monitoring and debugging)
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=langgraph-learning-demo

# Vector Database Settings (可选 - Optional)
# Pinecone
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment

# Weaviate
WEAVIATE_URL=your_weaviate_url_here
WEAVIATE_API_KEY=your_weaviate_api_key_here

# Local LLM Settings (可选 - Optional)
OLLAMA_BASE_URL=http://localhost:11434

# Development Settings
DEBUG=true
LOG_LEVEL=INFO

# Database Settings (如果使用数据库 - If using database)
DATABASE_URL=sqlite:///./langgraph_learning.db

# Cache Settings
CACHE_TYPE=memory
REDIS_URL=redis://localhost:6379/0